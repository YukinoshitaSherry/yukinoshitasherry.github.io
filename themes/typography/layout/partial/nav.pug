div#site-nav.site-title-links
    ul
        li
            if is_home()
                a.current(href=config.root)= __('Home')
            else
                a(href=config.root)= __('Home')
        li
            if is_archive()
                a.current(href=config.root + config.archive_dir)= __('Archive')
            else
                a(href=config.root + config.archive_dir)= __('Archive')
        - if (site.categories.length > 0) {
        li
            if is_current('categories/')
                a.current(href=config.root + config.category_dir)= __('Categories')
            else
                a(href=config.root + config.category_dir)= __('Categories')
        - }
        - if (site.tags.length > 0) {
        li
            if is_current('tags/')
                a.current(href=config.root + config.tag_dir)= __('Tags')
            else
                a(href=config.root + config.tag_dir)= __('Tags')
        - }
        li
            if is_current('friends/')
                a.current(href=url_for("/friends/"))= __('Friends')
            else
                a(href=url_for("/friends/"))= __('Friends')
        li.about-link
            if is_current('about/')
                a.current(href=url_for("/about/"))= "About"
            else
                a(href=url_for("/about/"))= "About"
        include ../mixins
        +make_page_links()
        li.soc
            if theme.github
                a(href="https://github.com/YukinoshitaSherry" target="_blank" rel="noopener noreferrer" aria-label="Github" style="display: inline-block;")
                    i.fa.fa-github
            if theme.xiaohongshu
                a(href="https://www.xiaohongshu.com/user/profile/64f6cb2500000000060318b6" target="_blank" rel="noopener noreferrer" aria-label="Xiaohongshu")
                    img.custom-icon(src="/images/xhs.png" alt="小红书" style="width: 16px; height: 16px; vertical-align: middle;")
            if theme.twitter
                a(href="https://twitter.com/" + theme.twitter, target="_blank", rel="noopener noreferrer", aria-label="Twitter")
                    i.fa.fa-twitter &nbsp;
            if theme.instagram
                a(href="https://www.instagram.com/" + theme.instagram, target="_blank", rel="noopener noreferrer", aria-label="Instagram")
                    i.fa.fa-instagram &nbsp;
            if theme.weibo
                a(href="http://weibo.com/u/" + theme.weibo, target="_blank", rel="noopener noreferrer", aria-label="Sina Weibo")
                    i.fa.fa-weibo &nbsp;
            if theme.rss
                a(href=config.url + "/" + theme.rss target="_blank" rel="noopener noreferrer" aria-label="RSS" style="display: inline-block;")
                    i.fa.fa-rss
    div.visible-lg.visible-md.visible-sm.site-nav-footer
        br.site-nav-footer-br
        include footer