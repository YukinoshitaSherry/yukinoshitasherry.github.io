extends partial/layout

block site_title
    != __("Friends") + " · " + config.title

block description
    - var desc = __("Friends")+ ' - ' + config.title;
    meta(name="description", content=desc)

block content
    .autopagerize_page_element: .content
        .archive.animated.fadeInDown
            h2.archive-title
                != __("Friends")
            .friends-container
                if theme && theme.friends && theme.friends.length > 0
                    each friend in theme.friends
                        if friend.is_welcome
                            .friend-card.welcome-card
                                a.friend-link(href=friend.url, target="_blank", rel="noopener")
                                    .welcome-content
                                        if friend.avatar
                                            img.friend-avatar(src=friend.avatar, alt=friend.name)
                                        .friend-info
                                            .info-item URL: #{friend.url}
                                            .info-item Name: #{friend.name}
                                            .info-item Icon: #{friend.avatar}
                                            .info-item Description: #{friend.desc}
                                            p.welcome-text 【欢迎在评论区互换友链】
                        else
                            .friend-card
                                a.friend-link(href=friend.url, target="_blank", rel="noopener")
                                    if friend.avatar
                                        img.friend-avatar(src=friend.avatar, alt=friend.name)
                                    .friend-info
                                        h3.friend-name= friend.name
                                        p.friend-desc= friend.desc
                else
                    p.no-friends 暂无友链
            
            #giscus-container
            script(
                src="https://giscus.app/client.js"
                data-repo="YukinoshitaSherry/yukinoshitasherry.github.io"
                data-repo-id="R_kgDONEFZ0Q"
                data-category="General"
                data-category-id="DIC_kwDONEFZ0C4CmKE4"
                data-mapping="pathname"
                data-strict="0"
                data-reactions-enabled="1"
                data-emit-metadata="0"
                data-input-position="bottom"
                data-theme="light"
                data-lang="zh-CN"
                crossorigin="anonymous"
                async
            )